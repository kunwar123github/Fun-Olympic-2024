<%- include('../../components/dashboard/navabar.ejs') %>

    <style>
        body {
            background-image: url("https://getwallpapers.com/wallpaper/full/c/c/4/124579.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }

        main {
            margin-top: 100px;
            max-width: 1280px;
            margin-inline: auto;

        }

        .accordion {
            max-width: 600px;
            margin: 0 auto;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .accordion-item {
            border-bottom: 1px solid #ccc;
        }

        .accordion-item-header {
            padding: 10px;
            font-weight: bold;
            cursor: pointer;
            background-color: #f5f5f5;
            color: #ee770f;
        }

        .accordion-item-content {
            padding: 10px;
            display: none;
            background-color: #ffffff;
            color: black;
        }

        .accordion-item.active .accordion-item-header {
            background-color: #e0e0e0;
        }

        .accordion-item.active .accordion-item-content {
            display: block;
        }
    </style>

    <body>

        <main>
            <div class="messages-hero">
                <h3 style="text-align: center; color: #8cf6a4; font-size: 25px;margin-bottom: 10px;">Messages</h3>
                <div class="messages-container">
                    <div class="accordion">
                        <% for(let i=0;i< msg.length; i++) { %>
                            <div class="accordion-item">
                                <div class="accordion-item-header">Message <%=i+1%> from <%=msg[i].email %>
                                </div>
                                <div class="accordion-item-content">
                                    <b>Name: </b>
                                    <%=msg[i].name %> <br><br> <b>Address:</b>
                                        <%=msg[i].address %> <br><br>
                                            <b>Message:</b><br> <br>

                                            <%=msg[i].message %><br>
                                </div>
                            </div>
                            <% } %>
                                <!-- Add more accordion items as needed -->
                    </div>
                </div>
            </div>
        </main>

    </body>


    <script>
        const accordionItems = document.querySelectorAll('.accordion-item');

        accordionItems.forEach((item) => {
            const header = item.querySelector('.accordion-item-header');

            header.addEventListener('click', () => {
                item.classList.toggle('active');
            });
        });
    </script>